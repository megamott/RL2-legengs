<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".abstracts.view.fragments.UserListFragment"
    android:orientation="vertical"
    android:gravity="center">

    <EditText
        android:id="@+id/add_question_editor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/questions"
        android:autofillHints="@string/questions"
        android:inputType="text"/>

    <Button
        android:id="@+id/add_question_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"/>

    <TextView
        tools:text="@string/app_name"
        android:id="@+id/current_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/question_text"/>


</LinearLayout>